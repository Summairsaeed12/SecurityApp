<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/screen"
    android:padding="10dp">


    <Button
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner"
        android:padding="10dp"
        android:src="@drawable/secondimage"
        android:text="Logout" />
    <EditText
        android:visibility="invisible"
        android:inputType="number"
        android:id="@+id/number"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:textColorHint="#000"
        android:hint="Enter number"
        android:padding="10dp"
        android:textColor="#000"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:visibility="invisible"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:id="@+id/message"
        android:layout_below="@+id/number"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:textColorHint="#000"
        android:hint="Enter connected Message"
        android:padding="10dp"
        android:textColor="#000"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <EditText


        android:visibility="gone"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:id="@+id/message2"
        android:layout_below="@+id/message"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:textColorHint="#000"
        android:hint="Enter disconnected Message"
        android:padding="10dp"
        android:textColor="#000"

        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="9dp" />

    <Button
        android:id="@+id/cardcircle"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/message2"
        android:layout_centerInParent="true"
        android:background="@drawable/round_corner"
        android:padding="10dp"
        android:src="@drawable/secondimage"
        android:text="Submit" />



    <ListView
        android:layout_below="@id/cardcircle"
        android:id="@+id/rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <LinearLayout


        android:layout_below="@+id/cardcircle"
        android:id="@+id/cardbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_white"
            android:orientation="horizontal">


            <ImageView



                android:id="@+id/rating"
                android:layout_width="40dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:foregroundGravity="center"
                android:src="@drawable/ic_baseline_share_24" />

            <Button

                android:id="@+id/share"

                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"

                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:onClick="createFloatingWidget"
                android:paddingLeft="4dp"
                android:text="Share"
                android:textColor="@android:color/black"

                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_white"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/shareapp"
                android:layout_width="40dp"


                android:layout_height="@dimen/_25sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star" />

            <Button


                android:id="@+id/ratingsbtn"

                android:layout_width="wrap_content"

                android:layout_height="@dimen/_30sdp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:onClick="createFloatingWidget"
                android:paddingLeft="4dp"
                android:text="Rating"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_below="@+id/cardbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        >
        <FrameLayout
            android:visibility="gone"
            android:background="@color/white"
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.cardview.widget.CardView>
</RelativeLayout>
